#ifndef MOTOR_H_
#define MOTOR_H_

typedef struct mot {
	int cnt;//ステップ数
	int duty;//デューティー

	float vel;//現在の速度
	float acc;//現在の設定加速度
	float max_vel;//最大設定速度
	float min_vel;//最小設定速度
	float max_acc;//最大設定加速度
	float min_acc;//最小設定加速度
	float tar_vel;//現在の設定速度
	float dist;//距離

	unsigned char rot_dir_flag;//回転方向
	unsigned char stop_flag;
	unsigned char end_flag;

} MOT;

void init_Motor(void);

#endif /* MOTOR_H_ */
